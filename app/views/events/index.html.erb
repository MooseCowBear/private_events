<h1>Events</h1>

<% if current_user %>
  <%= link_to current_user.username, current_user %>
<% end %>

<% if @events.empty? %>
  <%= "There are no events scheduled." %>
<% end %>

  <ul class="events">
    <% @events.each do |event| %>
      <li>
        <%= link_to event.name, event %>
        <%= event.event_date %>
        <%= event.location %>
      </li>
    <% end %>
  </ul>