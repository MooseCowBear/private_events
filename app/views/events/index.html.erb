<div class="events__index">
  <div class="event-group__background">
    <h3>Upcoming Events</h3>
    <% if @events.upcoming.empty? %>
      <p>There are no upcoming events at this time.</p>
    <% else %>
      <%= render partial: "shared/events_group", locals: {passed_events: @events.upcoming} %>
    <% end %>
  </div>

  <div class="event-group__background">
    <h3>Past Events</h3>
    <% if @events.past.empty? %>
      <p>There are no past events at this time.</p>
    <% else %>
      <%= render partial: "shared/events_group", locals: {passed_events: @events.past} %>
    <% end %>
  </div>
</div>