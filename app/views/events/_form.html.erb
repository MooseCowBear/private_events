<div class="form__wrapper event">
  <%= form_with model: event do |form| %>
    <% if @event.errors.any? %>
      <div>
        <h2 class="error_explanation"><%= pluralize(@event.errors.count, "error") %>
        prohibited this event from being saved:</h2>
        <ul>
          <% event.errors.full_messages.each do |message| %>
            <li class="error_message"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </div>

    <div>
      <%= form.label :event_date, "Date" %><br>
      <%= form.text_field :event_date %>
    </div>

    <div>
      <%= form.label :event_time, "Time" %><br>
      <%= form.text_field :event_time %>
    </div>

    <div>
      <%= form.label :location %><br>
      <%= form.text_field :location %>
    </div>

    <div>
      <%= form.label :description %><br>
      <%= form.text_area :description %><br>
    </div>

    <div class="form-button__wrapper">
      <%= form.submit %>
    </div>
  <% end %>
</div>